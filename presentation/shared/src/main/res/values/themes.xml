<resources>

    <style name="Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenIconBackgroundColor">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_wage_counter</item>
        <item name="postSplashScreenTheme">@style/WageCounter</item>
    </style>

    <style name="WageCounterBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?android:windowBackground</item>
        <item name="android:navigationBarColor">?android:windowBackground</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
    </style>

    <style name="WageCounter" parent="WageCounterBase">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

</resources>